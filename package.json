{
  "name": "ai-resume-editor",
  "version": "1.0.0",
  "description": "AI-powered resume editor with Cloudflare stack",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:client": "vite",
    "build": "npm run build:worker",
    "build:client": "vite build",
    "build:worker": "esbuild src/server/index.ts --bundle --format=esm --outfile=dist/worker.js --platform=neutral --target=esnext --external:cloudflare:* --external:node:* --conditions=worker --main-fields=worker,browser,module,main",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 execute ai-resume-editor-db --local --file=./drizzle/migrations/*.sql",
    "db:migrate:prod": "wrangler d1 execute ai-resume-editor-db --remote --file=./drizzle/migrations/*.sql",
    "db:studio": "drizzle-kit studio",
    "preview": "wrangler pages dev dist",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "hono": "^4.6.14",
    "@tanstack/react-router": "^1.87.3",
    "@tanstack/react-query": "^5.84.1",
    "better-auth": "^1.4.2",
    "drizzle-orm": "^0.36.4",
    "@libsql/client": "^0.14.0",
    "resend": "^4.0.1",
    "zod": "^3.24.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "openai": "^4.76.0",
    "@anthropic-ai/sdk": "^0.32.1",
    "stripe": "^17.5.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "lucide-react": "^0.364.0",
    "react-dropzone": "^14.3.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "wrangler": "^3.95.0",
    "drizzle-kit": "^0.28.1",
    "typescript": "^5.6.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/node": "^22.10.7",
    "esbuild": "^0.24.2",
    "tailwindcss": "^3.4.16",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "eslint": "^9.15.0",
    "@typescript-eslint/parser": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

